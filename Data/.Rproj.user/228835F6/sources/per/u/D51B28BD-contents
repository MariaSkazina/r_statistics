merge_csv <- function(x){
  setwd(x)
  mydir = x
  myfiles = list.files(path = mydir, pattern="*.csv", full.names=TRUE) # делаю список из файлов в директории
  dat_csv_test <-  ldply(myfiles, read_csv) # создали один большой csv по списку файлов в директории
}

dat_csv_test <- merge_csv('/home/maria/Bioinf/r_statistics/test_of_function')

